{
  "compilerOptions": {
    // ✅ 최소 ES2020 이상이면 충분
    "target": "ES2020",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",

    // ✅ 핵심 설정: moduleResolution = bundler (또는 nodenext)
    "moduleResolution": "bundler",

    // 나머지 설정 유지
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,

    // 빌드 방해 옵션 꺼두기
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "allowImportingTsExtensions": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
